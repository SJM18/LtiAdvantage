@page
@model AboutModel

@using Microsoft.AspNetCore.Mvc.Localization
@using Resources

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<Localization> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["About"];
}

<div class="container-fluid">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <p>
        @SharedLocalizer["AboutLTITool"]

        @SharedLocalizer["ProjectBasedOn"]
        <a href="https://github.com/andyfmiller/LtiAdvantageTool" target="_blank">GitHub</a>.
    </p>
</div>